<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/KwikButtonsStyle</item>
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/kwik_me_screen_background_color</item>
        <item name="android:editTextStyle">@style/KwikEditTextStyle</item>
    </style>


    <style name="KwikButtonsStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/kwik_me_button_text_color</item>
        <item name="android:background">@color/kwik_me_button_background_color</item>
    </style>

    <style name="KwikEditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
