<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.app.ButtonToApActivity"
    android:background="@color/kwik_me_screen_background_color">

    <ImageView
        android:id="@+id/button_to_ap_activity_image_view"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:id="@+id/button_to_ap_activity_comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press and hold the button for about\n8 seconds, until a sound will be heard\nand the lights will start to blink"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_to_ap_activity_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/button_to_ap_activity_help_link_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/kwik_me_link_message"
        android:layout_alignParentBottom="true"/>

    <include
        android:id="@+id/button_to_ap_activity_common_ui"
        android:layout_width="fill_parent"
        android:layout_above="@+id/button_to_ap_activity_looking_for_button_text_view"
        android:layout_height="wrap_content"
        layout="@layout/activity_base" />

    <TextView
        android:id="@+id/button_to_ap_activity_looking_for_button_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Looking for your button, this may take few seconds"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/kwik_me_text_white"
        android:layout_above="@+id/button_to_ap_activity_help_link_text_view"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
