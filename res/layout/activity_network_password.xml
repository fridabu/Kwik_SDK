<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.kwik.app.NetworkPasswordActivity">

    <TextView
        android:id="@+id/network_password_activity_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/kwik_me_black"
        android:text="Enter the password for the\nHome_Wifi network."
        android:textSize="16sp"
        android:typeface="normal"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="54dp"
        />

    <RelativeLayout
        android:id="@+id/network_password_activity_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@id/network_password_activity_title_text_view">


        <EditText
            android:id="@+id/network_password_activity_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/network_password_enter_password_hint"
            android:textSize="16sp"
            android:inputType="textPassword"
            style="@style/KwikEditTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/choose_network_hide_show_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Show"
            android:textSize="15sp"
            android:layout_alignBaseline="@+id/network_password_activity_password_edit_text"
            android:layout_alignBottom="@+id/network_password_activity_password_edit_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp" />


    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/network_password_activity_save_comment"
        android:layout_below="@id/network_password_activity_edit_text_layout"

        android:textColor="@color/kwik_me_gray_comments"
        android:background="@android:color/transparent"
        android:textSize="@dimen/sign_up_activity_comment_text_size"
        android:typeface="normal"
        android:layout_marginTop="@dimen/network_password_activity_comment_margin_top"/>

    <TextView
        android:id="@+id/network_password_activity_help_link_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/kwik_me_link_message"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
