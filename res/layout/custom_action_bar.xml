<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/kwik_me_screen_background_color">

    <TextView
        android:id="@+id/base_activity_action_bar_prev_text_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/base_activity_back"
        android:textColor="@color/kwik_me_text_white"
        android:drawableLeft="@drawable/arrow_prev"
        android:drawablePadding="@dimen/action_bar_arrow_icon_padding"
        android:textSize="@dimen/action_bar_arrow_text_size"
        android:background="@color/kwik_me_screen_background_color"
        android:textStyle="bold"
        android:gravity="start|bottom"
        android:layout_gravity="bottom"
        />
    <TextView
        android:id="@+id/base_activity_action_bar_title"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/action_bar_title_text_size"
        android:text=""
        android:gravity="center"
        android:textColor="@color/kwik_me_text_white"
        />

    <TextView
        android:id="@+id/base_activity_action_bar_next_text_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/base_activity_next"
        android:background="@color/kwik_me_screen_background_color"
        android:textColor="@color/kwik_me_text_white"
        android:drawableRight="@drawable/arrow_next"
        android:drawablePadding="@dimen/action_bar_arrow_icon_padding"
        android:textSize="@dimen/action_bar_arrow_text_size"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:gravity="end|bottom"
        />

</LinearLayout>